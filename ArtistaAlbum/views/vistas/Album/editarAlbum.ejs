<div class="page-header" >
  <h1 align="center">Actualizar Album: <%= albumAEditar.nombre %></h1>
</div>
<form action="/Album/editarAlbum" method="post">

  <label for="">Artista</label>
  <select class="form-control" name="idArtista">
    <% for(var i=0; i<artistas.length; i++){ %>
    <option value='<%=artistas[i].id%>'>
      <%=artistas[i].nombre%>
    </option>
    <%  } %>
  </select>

  <div class="form-group">
    <label>Nombre:</label>
    <input type="text" class="form-control" placeholder="Ingrese el nombre del album" name="nombre" value="<%= albumAEditar.nombre %>">
  </div>

  <div class="form-group">
    <label>FechaLanzamiento</label>
    <input type="date" class="form-control" placeholder="Ingrese la fecha de lanzamiento"  name="fechaLanzamiento" value="<%=albumAEditar.fechaLanzamiento %>">
  </div>

  <div class="form-group">
    <label>URL de Portada</label>
    <input type="text" class="form-control" placeholder="Ingrese la URL de la portada"  name="URLPortada" value="<%= albumAEditar.URLPortada%>">
    <input type="hidden" name="idAlbum" value="<%=albumAEditar.id%>">
  </div>

  <button type="submit" class="btn btn-success">Actualizar Artista</button>
</form>
